<h1><%= @restaurant.name %></h1>

<%= simple_form_for([@restaurant, @review]) do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: Review::RATINGS %>
  <%= f.submit %>
<% end %>

<% @restaurant.reviews.each do |review| %>
  <p><%= review.content %> - <%= review.rating %></p>
<% end %>
